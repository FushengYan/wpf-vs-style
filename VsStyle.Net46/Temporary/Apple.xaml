<UserControl x:Class="VsStyle.Temporary.Apple"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <TextBlock Foreground="#FFB4B4B4" FontSize="30"
                   VerticalAlignment="Center" HorizontalAlignment="Center"
                   Text="{Binding Label}">
            <TextBlock.Effect>
                <DropShadowEffect Color="#FF8E8E8E"/>
            </TextBlock.Effect>
        </TextBlock>
    </Grid>
</UserControl>
